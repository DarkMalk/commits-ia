{
  "compilerOptions": {
    "target": "ES2022",

    "rootDir": "./src",
    "baseUrl": ".",
    "module": "Node16",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  }
}
